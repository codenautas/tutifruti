body
  font-family arial

.encabezado
  padding 5px
  background-color #ddd
  border 1px solid aaa
  
.encabezado span
  margin 5px
  font-size 120%
  
.encabezado label
  margin 4px
  margin-left 30px
  
span.letra
  font-size 200%
  
table
  border-collapse collapse
  
td
  border 1px solid black
  padding 3px
  min-width 100px
  
td.letra-grilla
  min-width 10px

td.fuera-tabla
  border 0px transparent

.tutifruti-palabra
  font-size 120%
  font-weight bold
  
.tutifruti-palabra[contenteditable="false"]
  color #00f
  
.tutifruti-puntoPorPalabra
  width 50px
  height 20px
  border 1px solid black
  
td.puntos-totales
  width 50px